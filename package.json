{
  "name": "colabrix",
  "version": "1.0.0",
  "description": "Production-ready backend infrastructure with PostgreSQL, Redis, MongoDB, Elasticsearch, and ClickHouse",
  "type": "module",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "format": "prettier --write \"src/**/*.js\"",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:migrate:deploy": "prisma migrate deploy",
    "db:studio": "prisma studio",
    "docker:dev": "docker-compose up -d",
    "docker:prod": "docker-compose -f docker-compose.production.yml up -d",
    "docker:down": "docker-compose down",
    "cluster:setup": "node scripts/setup-redis-cluster.js",
    "setup": "npm install && npm run db:generate && npm run db:migrate",
    "prepare": "husky"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.859.0",
    "@aws-sdk/lib-storage": "^3.859.0",
    "@prisma/client": "^6.13.0",
    "@prisma/extension-accelerate": "^2.0.2",
    "bcryptjs": "^3.0.2",
    "bull": "^4.16.5",
    "colorette": "^2.0.20",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "express-rate-limit": "^8.0.1",
    "glob": "^11.0.3",
    "helmet": "^8.1.0",
    "ioredis": "^5.7.0",
    "joi": "^18.0.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.17.0",
    "morgan": "^1.10.1",
    "multer": "^2.0.2",
    "multer-s3": "^3.0.1",
    "nodemailer": "^7.0.5",
    "redis": "^5.7.0",
    "socket.io": "^4.8.1",
    "source-map-support": "^0.5.21",
    "stripe": "^18.4.0",
    "winston": "^3.17.0",
    "winston-mongodb": "^7.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/js": "^9.32.0",
    "eslint": "^9.32.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.4",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "prisma": "^6.13.0"
  },
  "keywords": [
    "colabrix",
    "backend",
    "node.js",
    "express",
    "postgresql",
    "redis",
    "mongodb",
    "elasticsearch",
    "clickhouse",
    "docker"
  ],
  "author": "Manish",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
